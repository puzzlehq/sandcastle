{
  "name": "sandcastle",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --force",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "install:noir": "curl -L https://raw.githubusercontent.com/noir-lang/noirup/main/install | bash noirup -v 0.16.0-aztec.1",
    "install:sandbox": "docker pull aztecprotocol/aztec-sandbox:0.9.0",
    "start:sandbox": "SANDBOX_VERSION=0.9.0 /bin/bash -c \"$(curl -fsSL 'https://sandbox.aztec.network')\"",
    "compile": "aztec-cli compile src/contracts --outdir ../artifacts --typescript ../artifacts"
  },
  "dependencies": {
    "@aztec/aztec.js": "^0.9.0",
    "@aztec/circuits.js": "^0.9.0",
    "@aztec/foundation": "^0.9.0",
    "@aztec/noir-contracts": "^0.9.0",
    "@aztec/types": "^0.9.0",
    "@rollup/plugin-inject": "^5.0.5",
    "base64-js": "^1.5.1",
    "debug": "^4.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-plugin-node-stdlib-browser": "^0.2.1"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/debug": "^4.1.10",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.16",
    "buffer": "5.7.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "memfs": "^4.6.0",
    "postcss": "^8.4.31",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.3.3",
    "tty-browserify": "^0.0.1",
    "typescript": "^5.0.2",
    "util": "^0.12.5",
    "vite": "^4.4.5",
    "vite-plugin-node-polyfills": "^0.15.0",
    "vite-plugin-static-copy": "^0.17.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "pnpm": {
    "overrides": {
      "buffer": "5.7.1",
      "base64-js": "^1.5.1"
    }
  }
}
